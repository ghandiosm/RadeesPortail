<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconConsommation"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:src="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/consommationNameLibelle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N° Contrat :  "
                        android:textSize="14dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/consommationName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nom Contrat"
                        android:textSize="14dp"
                        android:textStyle="italic" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/consommationTourneNumLibelle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="N° Tourné :  "
                        android:textSize="14dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/consommationTourneNum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nom Consommation"
                        android:textSize="14dp"
                        android:textStyle="italic" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/consommationPeriodLibelle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Période :  "
                        android:textSize="14dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/consommationPeriod"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Nom Consommation"
                        android:textSize="14dp"
                        android:textStyle="italic" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/consommationMTLibelle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="MT :  "
                        android:textSize="14dp"
                        android:textStyle="bold" />
                    <TextView
                        android:id="@+id/consommationMT"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0000 "
                        android:textSize="14dp"
                        android:textStyle="italic" />

                </LinearLayout>



            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>