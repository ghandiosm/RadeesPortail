<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_charge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <ImageView
        android:layout_marginTop="15dp"
        android:id="@+id/logo"
        android:layout_gravity="center"
        android:layout_width="250dp"
        android:layout_height="150dp"
        android:layout_marginBottom="10dp"
        app:srcCompat="@drawable/ic_logo_radees"
        android:layout_centerHorizontal="true" />

    <EditText
        android:id="@+id/customerCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_icon"
        android:inputType="textEmailAddress"
        android:drawableLeft="@mipmap/ic_person_white_24dp"
        android:drawablePadding="15dp"
        android:padding="10dp"
        android:hint="Code Client"
        android:imeOptions="actionNext"
        android:layout_margin="15dp"
        />

    <EditText
        android:id="@+id/customerGerance"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_icon"
        android:inputType="textEmailAddress"
        android:drawableLeft="@mipmap/ic_person_white_24dp"
        android:drawablePadding="15dp"
        android:padding="10dp"
        android:hint="GÃ©rance"
        android:imeOptions="actionNext"
        android:layout_margin="15dp"
        />

    <EditText
        android:id="@+id/customerLocalite"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_icon"
        android:inputType="textEmailAddress"
        android:drawableLeft="@mipmap/ic_person_white_24dp"
        android:drawablePadding="15dp"
        android:padding="10dp"
        android:hint="Localite"
        android:imeOptions="actionNext"
        android:layout_margin="15dp"
        />


    <Button
        android:id="@+id/verifyBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Verifier"
        android:textColor="@color/logoRed"
        android:background="@drawable/bg_action_button"
        android:layout_margin="13dp"
        />




</LinearLayout>
