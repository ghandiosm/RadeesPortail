<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_charge"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginActivity">

    <EditText
        android:id="@+id/tourneReclammation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_icon"
        android:inputType="phone"
        android:drawableLeft="@mipmap/ic_assignment_white_24dp"
        android:drawablePadding="15dp"
        android:padding="10dp"
        android:hint="Tourné"
        android:imeOptions="actionNext"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="40dp" />


    <EditText
        android:id="@+id/policeReclammation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_icon"
        android:inputType="phone"
        android:drawableLeft="@mipmap/ic_assignment_white_24dp"
        android:drawablePadding="15dp"
        android:padding="10dp"
        android:hint="Police"
        android:imeOptions="actionNext"
        android:layout_margin="10dp"
        android:layout_below="@+id/logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>

    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"/>

    <EditText
        android:id="@+id/adresseReclammation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_icon"
        android:inputType="textPersonName"
        android:drawableLeft="@mipmap/ic_assignment_white_24dp"
        android:drawablePadding="15dp"
        android:padding="10dp"
        android:hint="Adresse"
        android:imeOptions="actionNext"
        android:layout_margin="10dp"
        android:layout_below="@+id/logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/repereReclammation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_edittext_icon"
        android:inputType="textPersonName"
        android:drawableLeft="@mipmap/ic_assignment_white_24dp"
        android:drawablePadding="15dp"
        android:padding="10dp"
        android:hint="Repère"
        android:imeOptions="actionNext"
        android:layout_margin="10dp"
        android:layout_below="@+id/logo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/ajoutReclamation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ajouter"
        android:textColor="@color/logoRed"
        android:background="@drawable/bg_action_button"
        android:layout_margin="13dp"
        />


</LinearLayout>

